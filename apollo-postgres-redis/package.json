{
  "name": "apollo-postgres-redis",
  "version": "1.0.0",
  "description": "Template for Express app configured with Postgres, Prisma and Redis for Heroku",
  "scripts": {
    "start": "NODE_ENV=production node ./dist/web.js",
    "worker": "NODE_ENV=production node ./dist/worker.js",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "worker:dev": "nodemon --exec babel-node src/workers/index.worker.js",
    "dev": "nf start -j Procfile.dev",
    "build": "webpack --mode=production",
    "build:ui": "rm -rf build && cd ../PROJECT-CLIENT && npm run build --prod && cp -r build ../server-apollo-redis",
    "deploy": "git push heroku master",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "data:init": "npm run db --type=rollback && npm run db --type=migrate && npm run db --type=seed",
    "data:initDev": "npm run db --type=rollback && npm run db --type=migrate && npm run db --type=seed && npm run prisma:createDev",
    "db": "dotenv -- npm run $npm_config_type",
    "knex": "babel-node node_modules/.bin/knex",
    "migrate": "npm run knex -- migrate:latest --knexfile=./src/data/knexfile.js",
    "rollback": "npm run knex -- migrate:rollback --knexfile=./src/data/knexfile.js",
    "seed": "npm run knex -- seed:run --knexfile=./src/data/knexfile.js",
    "migrate:make": "dotenv -- npm run knex -- migrate:make $npm_config_name --knexfile=./src/data/knexfile.js",
    "seed:make": "dotenv -- npm run knex -- seed:make $npm_config_name --knexfile=./src/data/knexfile.js",
    "prisma:create": "prisma introspect && prisma generate",
    "prisma:createDev": "prisma introspect --schema=./prisma/test/schema.prisma && prisma generate --schema=./prisma/test/schema.prisma",
    "logs:prod": "heroku logs --tail",
    "logs:dbprod": "heroku logs -p postgres -t",
    "app:info": "heroku apps:info",
    "kill": "sudo kill -9 $(sudo lsof -t -i:4000)"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.20.1",
    "apollo-server-express": "^2.19.2",
    "bull": "^3.20.0",
    "bull-board": "^1.2.0",
    "express": "^4.17.1",
    "ioredis": "^4.19.4",
    "knex": "^0.21.5",
    "pg": "^8.3.3",
    "throng": "^5.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@prisma/cli": "^2.15.0",
    "babel-loader": "^8.1.0",
    "dotenv-cli": "^3.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "find-config": "^1.0.0",
    "foreman": "^3.0.1",
    "prettier": "2.1.1",
    "prisma": "^2.20.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "engines": {
    "node": "12.8.x"
  }
}
